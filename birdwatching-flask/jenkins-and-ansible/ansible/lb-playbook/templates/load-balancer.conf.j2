upstream backend {
{% for host in groups['web'] %}
    server {{hostvars[host]['ansible_host']}}:{{port}};
{% endfor %}
}

server {
    listen {{ port }};
    server_name _;
    location / {
        proxy_pass http://backend;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
